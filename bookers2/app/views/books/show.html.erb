<div class = "contents clearfix">
  <div class=" col-lg-4">
    <%= render 'books/list', user: @nowuser, book: @newbook %>
  </div>
  

  <div class="col-lg-8">
    <h3>Book detail</h3>
    <table class="table">
      <tbody>
        <tr>
          <td>
            <%= link_to books_path do %>
               <%= attachment_image_tag @nowuser, :profile_image, :fill,60,60, class: "user-image", fallback: "no_image.jpg"  %>
            <% end %>
          </td>
          <td><%= @book.title %></td>
          <td><%= @book.opinion %></td>
          <% if @book.user == current_user %>
          <td>
            <%= link_to edit_book_path(@book) do %>
            <div class="btn btn-success">Edit</div>
            <% end %>
            </td>
          <td>
            <%= link_to book_path(@book), method: :delete do %>
            <div class="btn btn-danger">Destroy</div>
            <% end %>
          </td>
          <% end %>
        </tr>
      </tbody>
    </table>
  </div>
</div>