<div class = "contents">
  <div class=" col-lg-4">
    <div>
      <h3> User info</h3>
    </div>

    <div>
      <h3> New Book</h3>
      <p> Title</p>
      <p> Opinion</p>
    </div>
  </div>
  

  <div class="col-lg-8">
    <h3>Book detail</h3>
    <table class="table">
      <tbody>
        <tr>
          <td>
            <%= link_to books_path do %>
               <%= attachment_image_tag @user, :profile_image, :fill,60,60 %>
            <% end %>
          </td>
          <td><%= @book.title %></td>
          <td><%= @book.opinion %></td>
          <td>Editボタン</td>
          <td><%= link_to "Destory", book_path(@book), method: :delete %></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>