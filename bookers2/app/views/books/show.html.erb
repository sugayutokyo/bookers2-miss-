<div class = "contents">
  <div class=" col-lg-4">
    <div>
      <h3> User info</h3>
    </div>

    <div>
      <h3> New Book</h3>
      <p> Title</p>
      <p> Opinion</p>
    </div>
  </div>
  

  <div class="col-lg-8">
    <h3>Book detail</h3>
    <table class="table">
      <tbody>
        <tr>
          <td>
            <%= link_to books_path do %>
               <%= attachment_image_tag @user, :profile_image, :fill,60,60 %>
            <% end %>
          </td>
          <td><%= @book.title %></td>
          <td><%= @book.opinion %></td>
          <% if @book.user == current_user %>
          <td>
            <%= link_to edit_book_path(@book) do %>
            <div class="btn btn-success">Edit</div>
            <% end %>
            </td>
          <td>
            <%= link_to book_path(@book), method: :delete do %>
            <div class="btn btn-danger">Destroy</div>
            <% end %>
          </td>
          <% end %>
        </tr>
      </tbody>
    </table>
  </div>
</div>