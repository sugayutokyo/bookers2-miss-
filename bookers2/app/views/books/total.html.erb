<div class = "contents">
  <div class=" col-lg-4">
    <%= render 'books/list',user: @user,book: @book %>
  </div>

  <div class="col-lg-8">
    <h3> Books</h3>
    <table class="table">
      <thead>
        <tr>
          <th> </th>
          <th>Title</th>
          <th>Opinion</th>
        </tr>
      </thead>
      <tbody>
          <% @books.each do |book| %>
          <tr>
            <td><%= attachment_image_tag book.user, :profile_image, :fill, 60, 60 %></td>
            <td>
              <%= link_to book_path(book.id) do %>
               <%= book.title %>
              <% end %>
            </td>
            <td><%= book.opinion %></td>
          </tr>
          <% end %>
      </tbody>
    </table>
  </div>
</div>